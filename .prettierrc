{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*rc", "*.json", "*.md", "*.yml", "*.code-*"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
